= simple_form_for(@goal, :html => {:class => "form-horizontal"}) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :progress, :collection => 0..100

  .form-actions
    = f.button :submit, :class => "btn btn-primary"
    = link_to "cancel", root_path, :class => "btn"
