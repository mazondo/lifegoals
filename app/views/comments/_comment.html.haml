.comment
  %strong= comment.created_at.strftime("%b %d, %Y")
  \: 
  =raw highlight(comment)
  .pull-right
    = link_to "edit", edit_goal_comment_path(@goal, comment), :class => "btn btn-mini"
    = link_to "delete", goal_comment_path(@goal, comment), :class => "btn btn-mini btn-danger", :method => :delete, :confirm => "Are you sure you want to delete this comment?"